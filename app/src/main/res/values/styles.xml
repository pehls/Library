<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Txt_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">120dp</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:shadowColor">@android:color/holo_orange_light</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BTN_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">120dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:shadowColor">@android:color/holo_orange_light</item>
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="entertxt_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">48dp</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:shadowColor">@android:color/holo_orange_light</item>
        <item name="android:textColor">@android:color/background_light</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
